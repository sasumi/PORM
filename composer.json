{
	"name": "lfphp/porm",
	"description": "PHP 数据库ORM抽象库，用于PHP程式独立使用数据库时，方便以ORM方式进行设计。",
	"homepage": "http://blog.yikepi.com/",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Sasumi.H",
			"email": "cnsasumi@outlook.com",
			"homepage": "http://blog.yikepi.com/"
		}
	],
	"keywords": [
		"ORM",
		"DatabaseModel"
	],
	"require": {
		"php": ">=7.0",
		"ext-mbstring": "*",
		"ext-pdo": "*",
		"ext-json": "*",
		"ext-mysqli": "*",
		"lfphp/logger": "^1.0",
		"lfphp/func": "^1.1",
		"lfphp/pdodsn": "^0.0.7"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"LFPhp\\PORM\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"LFPhp\\PORM\\": "src/",
			"LFPhp\\PORM\\tests\\": "tests/"
		}
	},
	"repositories": {
		"packagist": {
			"type": "composer",
			"url": "https://mirrors.aliyun.com/composer/"
		}
	}
}
